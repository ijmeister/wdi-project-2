<div class="page-header">
    <h1>Please Sign Up</h1>
</div>
<form action="/users/signup" method="POST">
    <div class="form-group">
        <label for="authEmail">Email</label>
        <input id="authEmail" class="form-control" type="email" name="email">
    </div>

    <div class="form-group">
        <label for="authPassword">Password</label>
        <input id="authPassword" class="form-control" type="password" name="password">
    </div>

    <div class="form-group">
        <label for="authName">Name</label>
        <input id="authName" class="form-control" type="name" name="name">
    </div>

    <div class="form-group">
        <label for="authTargetExpense">Target Spending</label>
        <input id="authTargetExpense" class="form-control" type="targetExpense" name="targetExpense">
    </div>

    <div class="form-group">
        <label for="authExpenseCycle">Expense Window (Day of Month)</label>
        <input id="authExpenseCycle" class="form-control" type="expenseCycle" name="expenseCycle">
    </div>

    <input class="btn btn-primary" type="submit">
</form>
